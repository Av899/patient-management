# PostgreSQL Configuration
POSTGRES_DB=patientdb
POSTGRES_USER=patientadmin
POSTGRES_PASSWORD=patient123

# Port Configuration
# PostgreSQL: Host port 5433 -> Container port 5432
# Patient Service: Host port 8081 -> Container port 8080
POSTGRES_HOST_PORT=5433
PATIENT_SERVICE_HOST_PORT=8081

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Database Connection
# Note: Use 'postgres:5432' when connecting from within Docker network
# Use 'localhost:5433' when connecting from host machine
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/patientdb
SPRING_DATASOURCE_USERNAME=patientadmin
SPRING_DATASOURCE_PASSWORD=patient123

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# Connection Pool Settings
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_PM=DEBUG
